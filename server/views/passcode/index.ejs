<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>WhoYaGot?</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>

<body class="container" style="margin-top: 50px;">
    <header>
        <%- include('../layout/sidebar'); %>
    </header>
    <div class="content">
        <h1>Passcode</h1>
        <% if (messages.success) { %>
            <div class="alert alert-success" role="alert">
                <%- messages.success %>
            </div>
            <% } %>
    
                <% if (messages.error) { %>
                    <div class="alert alert-danger" role="alert">
                        <%- messages.error %>
                    </div>
                    <% } %>
    
                        <div class="card">
                            <div class="card-header">
                                <ul class="nav nav-pills w-100">
                                    <li class="nav-pill active">
                                        <a class="nav-link">Passcodes</a>
                                    </li>
                                    <li class="nav-pill ml-auto">
                                        <a class="nav-link active" href="/passcode/add">Add Passcode</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="card-body">
                                <% if(data.length) { %>
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Passcode</th>
                                                <th scope="col">Status</th>
                                                <th width="200px">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(var i=0; i< data.length; i++) { %>
                                                <tr>
                                                    <th scope="row">
                                                        <%= (i+1) %>
                                                    </th>
                                                    <td>
                                                        <%= data[i].Passcode%>
                                                    </td>
                                                    <td>
                                                        <%= data[i].IsActive%>
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-success edit"
                                                            href="../passcode/edit/<%=data[i].Id%>">Edit</a>
                                                        <a class="btn btn-danger delete"
                                                            onclick="return alert('Are you sure want to delete this record?')"
                                                            href="../passcode/delete/<%=data[i].Id%>">Delete</a>
                                                    </td>
                                                </tr>
                                                <% } %>
                                        </tbody>
                                    </table>
                                    <% } %>
    
                                        <!-- if result is empty -->
                                        <% if(!data.length) { %>
                                            <p class="text-center">No passcode found!</p>
                                            <% } %>
                </div>
          </div>
    </div>
</body>

</html>